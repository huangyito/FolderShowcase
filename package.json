{
  "name": "foldershowcase",
  "version": "1.0.0",
  "description": "A folder-driven showcase website that automatically generates content from folder structures and Markdown files",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "npm run build:client",
    "build:client": "cd client && npm run build",
    "install:all": "npm install && cd client && npm install"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "fs-extra": "^11.1.1",
    "markdown-it": "^13.0.2",
    "markdown-it-attrs": "^4.1.6",
    "mime-types": "^2.1.35",
    "path": "^0.12.7",
    "sharp": "^0.34.4"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "keywords": [
    "portfolio",
    "gallery",
    "markdown",
    "file-system",
    "static-site",
    "docker",
    "vue",
    "nodejs",
    "photography",
    "design",
    "showcase"
  ],
  "author": "FolderShowcase Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/foldershowcase.git"
  },
  "homepage": "https://github.com/your-username/foldershowcase#readme"
}
